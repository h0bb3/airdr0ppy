{
    "compilerOptions": {
      "target": "es2020",
      "module": "es2022",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "outDir": "./dist",
      "rootDir": "."
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "dist"]
  }